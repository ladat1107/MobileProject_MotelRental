<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MapActivity">
    <SearchView
        android:id="@+id/searchViewHome"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:elevation="4dp"
        android:background="@drawable/rounded_corner_4"
        android:iconifiedByDefault="false"
        android:inputType="textAutoComplete"
        android:queryHint="Search for a place..."
        android:visibility="visible" />
    <fragment
        android:id="@+id/googleMapHome"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-65dp"/>

    <ImageView
        android:id="@+id/btnHienTai"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="bottom|right"
        android:layout_marginTop="-90dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/ld_custom_edittext"
        android:src="@drawable/ld_aim" />


</LinearLayout>