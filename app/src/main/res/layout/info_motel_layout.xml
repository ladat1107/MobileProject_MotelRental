<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="130dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/imgHinhPhong"/>
    
    <RelativeLayout
        android:layout_width="234dp"
        android:layout_height="130dp"
        android:layout_marginLeft="116dp"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="26dp"
            android:text="Nhà trọ view sông hồ"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="13dp"
            android:src="@drawable/imgLove"
            android:layout_marginTop="34dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="100 lượt yêu thích"
            android:textSize="10dp"
            android:layout_marginTop="33dp"
            android:layout_marginLeft="22dp"/>

        <TextView
            android:id="@+id/txtView1"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="53dp"
            android:text="Giá từ: "
            android:textSize="10dp" />

        <TextView
            android:id="@+id/txtGia"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="3.000.000 VND"
            android:textSize="10dp"
            android:textStyle="bold"
            android:layout_marginTop="53dp"
            android:layout_toRightOf="@+id/txtView1"/>

        <TextView
            android:id="@+id/txtView2"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="53dp"
            android:text="/tháng."
            android:textSize="10dp"
            android:layout_toRightOf="@+id/txtGia"/>

        <TextView
            android:id="@+id/txtDiaChi"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginTop="73dp"
            android:text="Số 1 Võ Văn Ngân, Linh Chiểu, Thủ Đức."
            android:textSize="10dp"/>
        
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/imgStar"
            android:layout_marginTop="109dp"/>
        <TextView
            android:id="@+id/txtBinhLuan"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginTop="108dp"
            android:layout_marginLeft="22dp"
            android:text="100 bình luận"
            android:textColor="#a7a7a7"
            android:textSize="15dp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/imgViewLine"
        android:layout_width="320dp"
        android:layout_height="0.5dp"
        android:background="#a5a5a5"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="148dp"/>
</RelativeLayout>