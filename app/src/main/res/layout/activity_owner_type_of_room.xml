<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:windowSoftInputMode="adjustResize"
    tools:context=".OwnerTypeOfRoomActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/ld_color">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="1dp"
            android:src="@drawable/imgownerback" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:gravity="center"
            android:text="Thể loại"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginRight="30dp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llTro"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/ld_custom_edittext"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src="@drawable/img_ld_tro" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:text="Nhà trọ"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:layout_marginRight="30dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llGhep"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/ld_custom_edittext"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"

                android:src="@drawable/img_ld_troghep" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:text="Tìm bạn ở ghép"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:layout_marginRight="30dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llNguyenCan"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/ld_custom_edittext"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"

                android:src="@drawable/img_ld_nguyencan" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:text="Nhà nguyên căn"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:layout_marginRight="30dp"
                android:textStyle="bold" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llChungCu"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/ld_custom_edittext"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src="@drawable/img_ld_chungcu" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:text="Chung cư"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="20dp"
                android:layout_marginRight="30dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="-70dp">


        <Button
            android:id="@+id/btnTiepTuc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ld_custom_button_tieptuc"
            app:backgroundTint="@null"
            android:textSize="18dp"
            android:elevation="25dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Tiếp tục" />
    </LinearLayout>


</LinearLayout>