<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThayDoiMatKhau"
    android:background="@color/white">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bgheader">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/backwhite" />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="#00FFFFFF"
                android:text="."
                android:id="@+id/btnBack"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Đổi Mật Khẩu"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:id="@+id/tvDoiMatKhau"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="114dp"
        android:layout_marginLeft="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu cũ"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etMatKhaCu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:hint="Nhập mật khẩu cũ"
            android:textColor="@color/black"
            app:endIconMode="password_toggle">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:text="Mật khẩu mới"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etMatKhauMoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:layout_marginRight="30dp"
            android:hint="Nhập mật khẩu mới"
            android:textColor="@color/black"
            app:endIconMode="password_toggle">
        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="200dp"
            android:text="Xác nhận mật khẩu"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="18dp"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/etXacNhanMatKhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="230dp"
            android:layout_marginRight="30dp"
            android:hint="Xác nhận mật khẩu"
            android:textColor="@color/black"
            app:endIconMode="password_toggle">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="710dp"
        android:layout_marginRight="13dp"
        android:gravity="bottom"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnThayDoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ld_custom_button_tieptuc"
            android:elevation="25dp"
            android:text="Chỉnh sửa"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            app:backgroundTint="@null" />
    </LinearLayout>
</RelativeLayout>